<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    tools:context="layout.GenerateColorFragment">

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_semi_transparent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#3300FF"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                />

            <net.colindodd.toggleimagebutton.ToggleImageButton
                xmlns:tib="http://schemas.android.com/apk/res-auto"
                android:layout_width="32dp"
                android:layout_height="32dp"
                tib:tib_drawable_on="@drawable/ic_lock"
                tib:tib_drawable_off="@drawable/ic_unlock"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBlueGray"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#3300FF"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                />
            <net.colindodd.toggleimagebutton.ToggleImageButton
                xmlns:tib="http://schemas.android.com/apk/res-auto"
                android:layout_width="32dp"
                android:layout_height="32dp"
                tib:tib_drawable_on="@drawable/ic_lock"
                tib:tib_drawable_off="@drawable/ic_unlock"                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#3300FF"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                />
            <net.colindodd.toggleimagebutton.ToggleImageButton
                xmlns:tib="http://schemas.android.com/apk/res-auto"
                android:layout_width="32dp"
                android:layout_height="32dp"
                tib:tib_drawable_on="@drawable/ic_lock"
                tib:tib_drawable_off="@drawable/ic_unlock"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pink_pressed"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#3300FF"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                />
            <net.colindodd.toggleimagebutton.ToggleImageButton
                xmlns:tib="http://schemas.android.com/apk/res-auto"
                android:layout_width="32dp"
                android:layout_height="32dp"
                tib:tib_drawable_on="@drawable/ic_lock"
                tib:tib_drawable_off="@drawable/ic_unlock"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#3300FF"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                />
            <net.colindodd.toggleimagebutton.ToggleImageButton
                xmlns:tib="http://schemas.android.com/apk/res-auto"
                android:layout_width="32dp"
                android:layout_height="32dp"
                tib:tib_drawable_on="@drawable/ic_lock"
                tib:tib_drawable_off="@drawable/ic_unlock"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/button_generate_color"
            android:text="@string/text_generate_color"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

</FrameLayout>
